<Label>:
    font_name:'droid.ttf'
<TextInput>:
    font_name:'droid.ttf'
<Dutton@Button>:
    font_name:'droid.ttf'

<MyLayout>:
    orientation:'vertical'
    padding:(36,36)
    canvas.before:
        Rectangle:
            pos:self.pos
            size:self.size
            source:'55.png'
    Label:
        id:status
        size_hint_y:None
        height:'48dp'
        text_size:(self.width,None)
        halign:'left'
        valign:'top'
    Label:
        size_hint_y:None
        height:'3dp'
    Label:
        text:'hostname(user@ip:port)'
        size_hint_y:None
        height:'48dp'
        text_size:(self.width,None)
        halign:'left'
        valign:'top'
    TextInput:
        id:hostname
        text:'root@127.0.0.1:22'
        size_hint_y:None
        height:'48dp'
        padding:(10,0.5*(self.height-self.line_height))
        background_normal:'3.png'
    Label:
        size_hint_y:None
        height:'3dp'
    Label:
        text:'password'
        size_hint_y:None
        height:'48dp'
        text_size:(self.width,None)
        halign:'left'
        valign:'top'
    TextInput:
        id:password
        size_hint_y:None
        height:'48dp'
        padding:(10,0.5*(self.height-self.line_height))
        background_normal:'3.png'
    Label:
        size_hint_y:None
        height:'3dp'
    Label:
        text:'shell command'
        size_hint_y:None
        height:'48dp'
        text_size:(self.width,None)
        halign:'left'
        valign:'top'
    TextInput:
        id:shellcommand
        text:'python'
        size_hint_y:None
        height:'48dp'
        padding:(10,0.5*(self.height-self.line_height))
        background_normal:'3.png'
    Label:
        size_hint_y:None
        height:'3dp'
    Label:
        text:'run program command'
        size_hint_y:None
        height:'48dp'
        text_size:(self.width,None)
        halign:'left'
        valign:'top'
    TextInput:
        id:runcommand
        text:'python'
        size_hint_y:None
        height:'48dp'
        padding:(10,0.5*(self.height-self.line_height))
        background_normal:'3.png'
    Label:
        size_hint_y:None
        height:'36dp'
    Dutton:
        id:action
        size_hint_y:None
        height:'81dp'
        background_normal:'3.png'
        background_down:'2.png'
        on_release:root.write()
    Label: